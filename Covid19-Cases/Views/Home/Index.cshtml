@model Covid19_Cases.DTO.CovidCasesDto


<div class="row">
    <div class="row mt-2">
        <div class="col-2">
            <select class="form-select" aria-label="Default select example">
                <option selected>Region</option>
                @{ 
                    foreach (var item in Model.lstRegion)
                    {
                        <option value="@item.iso">@item.name</option>
                    }
                }
            </select>
        </div>
        <div class="col-2">
            <button class="btn btn-outline-primary" name="btnReport" id="=btnReport">Report</button>
        </div>
        <div class="col-3">
            <div class="btn-group" role="group" aria-label="Basic outlined example">
                <button type="button" class="btn btn-outline-primary" name="btn-format-xml" id="btn-xml">XML</button>
                <button type="button" class="btn btn-outline-primary" name="btn-format-json" id="btn-json">JSON</button>
                <button type="button" class="btn btn-outline-primary" name="btn-format-csv" id="btn-csv">CSV</button>
            </div>
        </div>
    </div>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                @{ if (Model.isFilter) { <th>Province</th> } else { <th>Region</th> } }
                <th>Cases</th>
                <th>Deaths</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model.lstDetail)
                {
                    <tr>
                        <td>@item.region.name</td>
                        <td>@item.confirmed.ToString("N0")</td>
                        <td>@item.deaths.ToString("N0")</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
